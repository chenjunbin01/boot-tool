    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.springboot.tool</groupId>
                <artifactId>tool-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.springboot.tool</groupId>
